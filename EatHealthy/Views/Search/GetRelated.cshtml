@{ Layout = null;}
@using EatHealthy.Models
@model IEnumerable<Hit>


@foreach (var item in Model)
{
    <div class="item-slick2 p-l-15 p-r-15">
        <!-- Block2 -->
        <div class="block2">
            <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                <img src="@item.recipe.image" alt="IMG-PRODUCT">
                <div class="block2-overlay trans-0-4">
                    <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                        <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                        <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                    </a>
                    <div class="block2-btn-addcart w-size1 trans-0-4">
                        @Html.ActionLink("TARİF", "GetDetail", new {
                       image = item.recipe.image,
                       source  = item.recipe.source,
                       dietLabels = string.Join(",", item.recipe.dietLabels),
                       ingredientLines = string.Join(",", item.recipe.ingredientLines),
                       healthLabels = string.Join(",", item.recipe.healthLabels),
                       label = item.recipe.label,
                       kcal = item.recipe.calories },new { @class = "flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" })
                    </div>
                </div>
            </div>

            <div class="block2-txt p-t-20">
                <a href="#" class="block2-name dis-block s-text3 p-b-5">
                    @item.recipe.label
                </a>

                <span class="block2-price m-text6 p-r-5">
                    @item.recipe.calories.ToString("0.##") Kcal
                </span>
            </div>
        </div>
    </div>
}